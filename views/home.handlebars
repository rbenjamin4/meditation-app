<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<header class="marbled-bg">

    <div class="weekly-duration">
        <p style="font-size: 60px; font-weight: 800; text-align: center; margin-bottom: 20px;">4.3h</p>
        <h1>Weekly Practice Duration</h1>
    </div>
    <button type="button" id="menu">Menu</button>

</header>

<section class="recent-meditations">

    {{#each data}}
    <article class="meditation">
        <h2 onclick="location.href='/meditations/{{id}}'">{{title}}</h2>
        <p>{{instructorId}}</p>
        <p>{{duration}}m</p>
        <button type="button" id="play-button" onclick="location.href='/player/{{id}}'">
            <i class="fa fa-play-circle fa-3x"></i>
        </button>
    </article>
    {{/each}}
</section>

<style>
    body {
        background: unset;
    }
</style>